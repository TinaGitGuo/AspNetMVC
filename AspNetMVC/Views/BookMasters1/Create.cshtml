@model AspNetMVC.BookMaster

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<script src="~/Content/jquery-ui-1.12.1.custom/external/jquery/jquery.js"></script>
<script>

    $(function () {

        $.ajax({

            type: "GET",

            url: "/BookMasters1/GetItem",

            datatype: "Json",

            success: function (data) {

                $.each(data, function (index, value) {

                    $('#AssignId').append('<option value="' + value.AssignId + '">' + value.Item + '</option>');

                });

            }

        });

    });
</script>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>BookMaster</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.strBookTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.strBookTypeId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.strBookTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.strAccessionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.strAccessionId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.strAccessionId, "", new { @class = "text-danger" })
                @Html.DropDownList("AssignId", new SelectList(string.Empty, "Value", "Text"), "Please select a item", new { @style = "width:250px;" })


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

